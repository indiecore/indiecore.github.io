<%
    var cssClass = "style" + (index % 12 + 1);
%>

<article>
    <span class="image">
        <img src="<%- item.cover_index || theme.default_cover_index %>" alt="" />
    </span>
	<a href="<%- config.root %><%- item.path %>">
		<% if(item.cover_title) { %>
			<h2 class="stroke"><%- item.cover_title %></h2>
		<% } %>
        <div class="content">
            <p><%- item.subtitle || "" %></p>
        </div>
    </a>
</article>